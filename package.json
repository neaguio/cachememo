{
    "name": "cachememo",
    "version": "1.0.1",
    "description": "This library provides two functions for optimizing function calls in JavaScript applications: memoize and cache.",
    "main": "./dist/cjs/index.js",
    "module": "./dist/esm/index.js",
    "types": "./dist/esm/index.d.ts",
    "scripts": {
        "build": "yarn build:esm && yarn build:cjs",
        "build:esm": "tsc",
        "build:cjs": "tsc --module commonjs --outDir dist/cjs",
        "lint": "eslint \"{**/*,*}.{js,ts}\"",
        "prettier": "prettier --write \"{src,tests,example/src}/**/*.{js,ts}\"",
        "prepare": "npm run build",
        "prepublishOnly": "npm run prettier && npm run lint",
        "test": "jest --config jestconfig.json"
    },
    "files": [
        "dist",
        "LICENSE",
        "README.md"
    ],
    "keywords": [
        "memoize",
        "cache",
        "memory",
        "optimization",
        "performance"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/neaguio/cachememo.git"
    },
    "author": "neaguio",
    "license": "MIT",
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^5.49.0",
        "@types/jest": "^29.4.0",
        "@typescript-eslint/parser": "^5.49.0",
        "eslint": "^8.33.0",
        "eslint-config-prettier": "^8.6.0",
        "eslint-plugin-prettier": "^4.2.1",
        "prettier": "^2.8.3",
        "typescript": "^4.9.4",
        "ts-jest": "^29.0.5",
        "jest": "^29.4.1",
        "jest-canvas-mock": "^2.4.0",
        "jest-environment-jsdom": "^29.4.1",
        "jest-fetch-mock": "^3.0.3"    
    },
    "dependencies": {
        "tslib": "^2.5.0"
    }
}
